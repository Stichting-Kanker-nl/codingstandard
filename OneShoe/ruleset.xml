<?xml version="1.0"?>
<ruleset name="OneShoe">
    <description>Drupal coding standards for One Shoe</description>

    <rule ref="Drupal"/>
    <rule ref="DrupalPractice"/>

    <rule ref="Drupal.NamingConventions.ValidVariableName.LowerStart">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>
    <rule ref="Drupal.NamingConventions.ValidFunctionName.ScopeNotCamelCaps">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>
</ruleset>
